<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4A261">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Encabezado con botón de volver y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Crear Rutina"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Campo Nombre Rutina -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Rutina"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/etNombreRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <!-- Campo Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/etDescripcionRutina"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="top"
            android:inputType="textMultiLine"/>

        <!-- Botón Elegir Ejercicios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicios"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <Button
            android:id="@+id/btnElegirEjercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar ejercicios"
            android:backgroundTint="#264653"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"/>

        <!-- Campo Frecuencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frecuencia"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/etFrecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <!-- Botón Crear Rutina -->
        <Button
            android:id="@+id/btnCrearRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Rutina"
            android:backgroundTint="#264653"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
