                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="series"
                    android:textColor="#888888"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txtTR1Editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="repes"
                    android:textColor="#888888"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
